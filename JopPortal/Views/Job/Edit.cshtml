@model JopPortal.Models.Job

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared2/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/edit-job.css">
</head>
<body>

    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <hr />
    <div class="container" >
        <form asp-action="Edit" style="width: 850px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" />

            <div class="form-group row">
                <label asp-for="JobCategory" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="JobCategory" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobCategory>()"></select>
                    <span asp-validation-for="JobCategory" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="JobType" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="JobType" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobType>()"></select>
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="JopLocation" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="JopLocation" class="form-control clr" />
                    <span asp-validation-for="JopLocation" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="JopSalary" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="JopSalary" class="form-control clr" />
                    <span asp-validation-for="JopSalary" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AvailablePlaces" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="AvailablePlaces" class="form-control clr" />
                    <span asp-validation-for="AvailablePlaces" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="JobDate" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="JobDate" class="form-control clr" />
                    <span asp-validation-for="JobDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="JobDescription" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="JobDescription" class="form-control clr" />
                    <span asp-validation-for="JobDescription" class="text-danger"></span>
                </div>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="alljobs" asp-controller="Job" class="btn btn-primary">Back to All Jobs</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
</body>
</html>
