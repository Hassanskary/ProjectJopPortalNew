@model JopPortal.Models.Job

@{
    ViewData["Title"] = "Create Job";
    Layout = "~/Views/Shared2/_Layout.cshtml";

}

<link rel="stylesheet" href="~/css/create-job.css" />

<div class="header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container">
    <form asp-controller="Job" asp-action="Create" method="post">
        <div class="card">
            <div class="card-body" style="width: 600px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="JobCategory" class="control-label"></label>
                    <select asp-for="JobCategory" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobCategory>()"></select>
                    <span asp-validation-for="JobCategory" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="JobType" class="control-label"></label>
                    <select asp-for="JobType" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.JobType>()"></select>
                    <span asp-validation-for="JobType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="JopLocation" class="control-label"></label>
                    <select asp-for="JopLocation" class="form-control clr" asp-items="Html.GetEnumSelectList<JopPortal.Models.Location>()"></select>
                    <span asp-validation-for="JopLocation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="JopSalary" class="control-label"></label>
                    <input asp-for="JopSalary" class="form-control clr" />
                    <span asp-validation-for="JopSalary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AvailablePlaces" class="control-label"></label>
                    <input asp-for="AvailablePlaces" class="form-control clr" />
                    <span asp-validation-for="AvailablePlaces" class="text-danger"></span>
                </div>

            

                <div class="form-group">
                    <label asp-for="JobDescription" class="control-label"></label>
                    <input asp-for="JobDescription" class="form-control clr" />
                    <span asp-validation-for="JobDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="margin-top: 30px;">Create</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="create-new-btn">
    <a asp-action="alljobs" class="btn">Back to All Jobs</a>
</div>
