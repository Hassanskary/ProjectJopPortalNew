@model JopPortal.Models.Job

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared2/_Layout.cshtml";

}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/details-job.css">
</head>
<body>

    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div>
        <h4>Job</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobCategory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JopLocation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JopLocation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JopSalary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JopSalary)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AvailablePlaces)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AvailablePlaces)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobDescription)
            </dd>
            
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.JobId" class="btn">Edit</a> 
        <a asp-action="alljobs" asp-controller="Job" class="btn">Back to All Jobs</a>
    </div>

</body>
</html>
