@model JopPortal.Models.Job

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared2/_Layout.cshtml";

}

<link rel="stylesheet" href="~/css/delete-job.css" />

<body>
    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="container clr">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Job</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JobCategory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JobCategory)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JobType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JobType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JopLocation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JopLocation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JopSalary)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JopSalary)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AvailablePlaces)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AvailablePlaces)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JobDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JobDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.JobDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.JobDescription)
                </dd>
               
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="JobId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="alljobs" asp-controller="Job" class="btn btn-danger">Back to All Jobs</a>
            </form>
        </div>
    </div>
</body>
