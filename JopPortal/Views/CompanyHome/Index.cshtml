                                            <a class="nav-link" asp-action="Logout" asp-controller="LoginCompany">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                                <span>
                                                    Log Out
                                                </span>
                                            </a>
                                        </li>

                                    }
                                }


                            </ul>
                        </div>

                </nav>
            </div>
