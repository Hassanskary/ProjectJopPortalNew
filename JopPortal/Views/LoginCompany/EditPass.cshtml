@using jobPortal.Models

@model Company
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared2/_Layout.cshtml";
}

<style>

    body {
        background-color: #C0C0C0;
    }

    .card {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #F0FFF0;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .text-danger {
        color: red;
    }

    .btn-primary {
        background-color: #8b0000;
        border-color: #8b0000;
    }

    hr {
        height: 15px;
        background-color: #008080;
        border: none;
        margin: 25px 0;
    }

</style>

<h1>Edit Password Company </h1>
<hr />
<div class="card">
    <form asp-action="EditPass" asp-controller="LoginCompany" method="post">

        <input type="hidden" asp-for="CompanyId" name="id" />
        <div class="form-group">
            <label for="Password" class="control-label">Current Password</label>
            <input type="password" id="Password" name="currentPassword" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewData["currReq"] != null)
            {
                <span class="text-danger">@ViewData["currReq"]</span>
            }
        </div>
        <div class="form-group">
            <label asp-for="CompanyPassword" class="control-label">New Password</label>
            <input asp-for="CompanyPassword" class="form-control" type="password" />
            <span asp-validation-for="CompanyPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        <div>
            <a asp-action="Edit" asp-controller="LoginCompany" class="btn btn-primary">Back to Edit</a>
        </div> 

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
