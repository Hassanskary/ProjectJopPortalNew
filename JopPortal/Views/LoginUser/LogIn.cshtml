@using jobPortal.Models

@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/signin.css">
    <style>
        .field-container {
            position: relative;
        }

        .text-danger {
            color: red;
            position: absolute;
            bottom: -20px;
            left: 0;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-controller="LoginUser" asp-action="LogInSave" method="post">
                    <span class="login100-form-title p-b-26 welcome">Welcome</span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>

                    <div class="field-container">
                        <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                            <input class="input100" asp-for="Email" placeholder="Email" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="field-container">
                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            <input asp-for="Password" class="input100" type="password" placeholder="Password" required />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">Login</button>
                        </div>
                    </div>

                    <div class="text-center p-t-115 crt-acc">
                        <span class="txt1" style="font-size: 18px;">Don’t have an account?</span>
                        <a asp-action="SignUp" asp-controller="LoginUser" class="txt2" style="font-size: 16px;">Sign Up</a>
                        <br />
                        <span class="txt1" style="font-size: 18px;"> You are not User </span>

                        <a asp-action="LogIn" asp-controller="LoginCompany" class="txt2">Company Login </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
